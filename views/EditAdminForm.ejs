  <%- include("header") %>

  <div class="container">
    <div class="page-inner">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <div class="card-title">edit Form</div>
            </div>
            <form action="/admin/updateData" method="post" enctype="multipart/form-data">
              <input type="hidden" name="id" value="<%= AdminData._id %>">

              <div class="card-body"> 
                <div class="row">
                  <div class="col-md-6">
                    <!-- Personal Information -->
                    <div class="form-group">
                      <label for="firstname">First Name</label>
                      <% let [fname,lname]=AdminData.name.split(' ')%>
                      <input
                        type="text"
                        class="form-control"
                        id="firstname"
                        name="firstname"
                        value="<%=fname%>"
                        placeholder="Enter First Name"
                        required
                      />
                    </div>
                    
                    <div class="form-group">
                      <label for="lastname">Last Name</label>
                      <input
                        type="text"
                        class="form-control"
                        id="lastname"
                        name="lastname"
                        placeholder="Enter Last Name"
                        value="<%=lname%>"
                        required
                      />
                    </div>
                    
                    <div class="form-group">
                      <label for="email">Email Address</label>
                      <input
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        placeholder="Enter Email"
                        value="<%=AdminData.email%>"
                        required
                      />
                      <small id="emailHelp" class="form-text text-muted"
                        >We'll never share your email with anyone else.</small
                      >
                    </div>
                    
                  
                    
                    <div class="form-group">
                      <label for="mobile">Mobile Number</label>
                      <input
                        type="tel"
                        class="form-control"
                        id="mobile"
                        name="mobile"
                        value="<%=AdminData.mobile%>"
                        placeholder="Enter Mobile Number"
                        required
                      />
                    </div>
                  </div>
                  
                  <div class="col-md-6">
                    <!-- Additional Information -->
                    <div class="form-group">
                      <label>Gender</label><br />
                      <div class="d-flex">
                        <div class="form-check">
                          <input
                            class="form-check-input"
                            type="radio"
                            name="gender"
                            id="male"
                            value="male"
                            checked
                            
                            <%= AdminData.gender === "other" ? "checked" : "" %>
                            
                            
                            
                          />
                          <label
                            class="form-check-label"
                            for="male"
                          >
                            Male
                          </label>
                        </div>
                        <div class="form-check">
                          <input
                            class="form-check-input"
                            type="radio"
                            name="gender"
                            id="female"
                            value="female"
                              <%= AdminData.gender === "other" ? "checked" : "" %>
                            
                            
                          />
                          <label
                            class="form-check-label"
                            for="female"
                          >
                            Female
                          </label>
                        </div>
                        <div class="form-check">
                          <input
                            class="form-check-input"
                            type="radio"
                            name="gender"
                            id="other"
                            value="other"

                          <input
    class="form-check-input"
    type="radio"
    name="gender"
    id="other"
    value="other"
    <%= AdminData.gender === "other" ? "checked" : "" %>


                            

                          />
                          <label
                            class="form-check-label"
                            for="other"
                          >
                            Other
                          </label>
                        </div>
                      </div>
                    </div>
                  <% const cities = ["bangalore", "mumbai", "delhi", "hyderabad", "chennai"]; %>

  <div class="form-group">
    <label for="city">City</label>
    <select class="form-select" id="city" name="city" required>
      <option value="">Select City</option>

      <% cities.forEach(function(city) { %>
        <option value="<%= city %>" <%= AdminData.city === city ? "selected" : "" %>>
          <%= city.charAt(0).toUpperCase() + city.slice(1) %>
        </option>
      <% }); %>
    </select>
  </div>

                  <% const hobbies = ["reading", "sports", "music", "travel"]; %>

  <div class="form-group">
    <label>Hobbies</label>
    <div class="selectgroup selectgroup-pills">
      <% hobbies.forEach(function(hobby) { %>
        <label class="selectgroup-item">
          <input
            type="checkbox"
            name="hobby"
            value="<%= hobby %>"
            class="selectgroup-input"
            <%= AdminData.hobby && AdminData.hobby.includes(hobby) ? "checked" : "" %>
          />
          <span class="selectgroup-button">
            <%= hobby.charAt(0).toUpperCase() + hobby.slice(1) %>
          </span>
        </label>
      <% }); %>
    </div>
  </div>

                    <div class="form-group">
                      <label for="profileImage">Profile Image</label>
                      <input
                        type="file"
                        class="form-control-file"
                        id="profileImage"
                        name="profileImage"
                      />
                      <small class="form-text text-muted">Upload your profile picture (JPEG/PNG)</small>
                    </div>
                    
                    <div class="form-group">
                      <label for="bio">Bio</label>
                      <textarea 
                        class="form-control" 
                        id="bio" 
                        name="bio" 
                        rows="3" 
                        placeholder="Tell us about yourself">
                        <%=AdminData.bio%>
                        </textarea>
                    </div>
                    
                    
                  </div>
                </div>
              </div>
              <div class="card-action">
                <button type="submit" class="btn btn-success">Submit</button>
                <button type="reset" class="btn btn-danger">Cancel</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include("footer") %>